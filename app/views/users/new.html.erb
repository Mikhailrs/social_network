<div class="container">
  <h1>Регистрация</h1>

  <%= form_with model: @user do |form| %>
    <p><%= form.label :name, 'Ваше имя' %></p>
    <p><%= form.text_field :name %></p>

    <p><%= form.label :email, 'Почта' %></p>
    <p><%= form.text_field :email %></p>

    <p><%= form.label :password, 'Пароль' %></p>
    <p><%= form.password_field :password %></p>

    <p><%= form.label :password_confirmation, 'Повторите пароль' %></p>
    <p><%= form.password_field :password_confirmation %></p>

    <p><%= form.label :avatar, 'Загрузка фото' %></p>
    <p><%= form.file_field :avatar %></p>

    <p><%= form.submit 'Зарегистрироваться', class: "btn btn-primary" %></p>
  <% end %>
</div>
