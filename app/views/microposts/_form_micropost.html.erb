<%#= render 'shared/error_messages' %>
<!--<h1 class="text-center">Регистрация</h1>-->
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_with url: user_microposts_url(@user), scope: 'microposts', method: :post do |form| %>
      <%= form.label :body, 'Введите сообщение' %>
      <p><%= form.text_area :body, class: 'form-control' %></p>

      <p><%= form.submit 'Отправить', class: "btn btn-primary" %></p>
    <% end %>
  </div>
</div>