<li id="micropost-<%= micropost.id %>">
  <span class="avatar">
    <% if @user.avatar.attached? %>
      <%= image_tag @user.avatar, class: 'img-circle', style: "height:50px;width:50px;"  %>
    <% else %>
      <%= image_tag ("photo-profile.jpg"), class: 'img-circle', style: "height:50px;width:50px;"  %>
    <% end %>
  </span>
  <span class="user"><%= link_to micropost.user.name, micropost.user %></span>
  <span class="body"><%= micropost.body %></span>
  <span class="timestamp">
    Posted <%= time_ago_in_words(micropost.created_at) %> ago.
  </span>
</li>

